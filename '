package main

import (
	"fmt"
	"math/rand"
	"strconv"
	"strings"
	"time"

	embed "github.com/Clinet/discordgo-embed"
	"github.com/alervaz/head-flipper/model"
	"github.com/bwmarrin/discordgo"
)

const (
	MAX = 10000000000000
)

func Flip(s *discordgo.Session, m *discordgo.MessageCreate) {
	if m.Author.ID == s.State.User.ID {
		return
	}

	if strings.HasPrefix(m.Message.Content, "!balance") {
		points, err := model.GetPoints(m.Author.Username)
		if err != nil {
			s.ChannelMessageSendEmbed(
				m.ChannelID,
				embed.NewErrorEmbed(
					"Not enought arguments",
					"Please provide how many points you want to risk from 1 to %d",
				),
			)
		}
	}

	if strings.HasPrefix(m.Message.Content, "!gamble") {
		args := strings.Split(m.Message.Content, " ")
		if len(args) < 2 {
			s.ChannelMessageSendEmbed(
				m.ChannelID,
				embed.NewErrorEmbed(
					"Not enought arguments",
					fmt.Sprintf(
						"Please provide how many points you want to risk from 1 to %d",
						MAX,
					),
				),
			)
			return
		}

		pointsStr := args[1]
		points, err := strconv.Atoi(pointsStr)
		if err != nil {
			s.ChannelMessageSendEmbed(
				m.ChannelID,
				embed.NewErrorEmbed(
					"Invalid argument",
					fmt.Sprintf("Please specify an integer number between 1 to %d", MAX),
				),
			)
			return
		}

		if points > MAX || points < 1 {
			s.ChannelMessageSendEmbed(
				m.ChannelID,
				embed.NewErrorEmbed(
					"Invalid range",
					fmt.Sprintf(
						"Please provide how many points you want to risk from 1 to %d",
						MAX,
					),
				),
			)
			return
		}

		posibilities := []bool{true, false}
		won := posibilities[rand.Intn(len(posibilities))]
		if won {
			err := model.Gamble(m.Author.Username, m.GuildID, points)
			if err != nil {
				s.ChannelMessageSendEmbed(
					m.ChannelID,
					embed.NewGenericEmbed(
						"Unexpected error",
						err.Error(),
					),
				)
				return
			}

			s.ChannelMessageSendEmbed(
				m.ChannelID,
				embed.NewGenericEmbed(
					"You won it was heads!",
					fmt.Sprintf("You won %d points", points),
				),
			)
			return
		}

		err = model.Gamble(m.Author.Username, m.GuildID, 0)
		if err != nil {
			s.ChannelMessageSendEmbed(
				m.ChannelID,
				embed.NewGenericEmbed(
					"Unexpected error",
					err.Error(),
				),
			)
			return
		}

		until := time.Now().Add(time.Minute * time.Duration(points*5))
		err = s.GuildMemberTimeout(m.GuildID, m.Author.ID, &until)
		if err != nil {
			s.ChannelMessageSendEmbed(
				m.ChannelID,
				embed.NewGenericEmbed(
					"Cannot mute a mod",
					"You cant play dirty mod",
				),
			)
			return
		}

		s.ChannelMessageSendEmbed(
			m.ChannelID,
			embed.NewGenericEmbed(
				"You lost",
				fmt.Sprintf("Enjoy your %d minutes out", points*5),
			),
		)
	}
}
